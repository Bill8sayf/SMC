<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Цвет фона -->
    <solid android:color="#FFFFFF" />

    <!-- Граница -->
    <stroke
        android:width="1dp"
        android:color="#CCCCCC" />

    <!-- Скругленные углы -->
    <corners android:radius="8dp" />

    <!-- Отступы внутри -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>